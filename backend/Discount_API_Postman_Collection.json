{
  "info": {
    "name": "Discount Management API",
    "description": "Complete API collection for testing discount management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "discountId",
      "value": "",
      "type": "string"
    },
    {
      "key": "planId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "    pm.test('Admin registered successfully', () => {",
                  "        pm.expect(response.user.role).to.equal('admin');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Admin User\",\n  \"phone\": \"+1234567890\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"adminpassword123\",\n  \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Regular User\",\n  \"phone\": \"+1234567891\",\n  \"email\": \"user@example.com\",\n  \"password\": \"userpassword123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emailOrPhone\": \"admin@example.com\",\n  \"password\": \"adminpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Plans (Setup)",
      "item": [
        {
          "name": "Create Test Plan",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('planId', response._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Premium Plan\",\n  \"price\": 299,\n  \"autoRenewalAllowed\": true,\n  \"status\": \"Active\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/plans",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "plans"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Discounts - Admin Operations",
      "item": [
        {
          "name": "Create Percentage Discount",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('discountId', response._id);",
                  "    pm.test('Discount created successfully', () => {",
                  "        pm.expect(response.code).to.equal('SAVE20');",
                  "        pm.expect(response.type).to.equal('percentage');",
                  "        pm.expect(response.value).to.equal(20);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"SAVE20\",\n  \"type\": \"percentage\",\n  \"value\": 20,\n  \"minAmount\": 100,\n  \"maxDiscount\": 50,\n  \"validFrom\": \"2025-09-01T00:00:00.000Z\",\n  \"validTo\": \"2025-12-31T23:59:59.000Z\",\n  \"usageLimit\": 100,\n  \"applicablePlans\": [\"{{planId}}\"],\n  \"status\": \"Active\",\n  \"description\": \"20% off on premium plans\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            }
          }
        },
        {
          "name": "Create Fixed Discount",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"FIXED50\",\n  \"type\": \"fixed\",\n  \"value\": 50,\n  \"minAmount\": 200,\n  \"validFrom\": \"2025-09-01T00:00:00.000Z\",\n  \"validTo\": \"2025-12-31T23:59:59.000Z\",\n  \"usageLimit\": 50,\n  \"status\": \"Active\",\n  \"description\": \"Fixed ₹50 off on orders above ₹200\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            }
          }
        },
        {
          "name": "Create Expired Discount (for testing)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"EXPIRED10\",\n  \"type\": \"percentage\",\n  \"value\": 10,\n  \"minAmount\": 50,\n  \"validFrom\": \"2025-01-01T00:00:00.000Z\",\n  \"validTo\": \"2025-01-31T23:59:59.000Z\",\n  \"usageLimit\": 10,\n  \"status\": \"Active\",\n  \"description\": \"Expired discount for testing\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            }
          }
        },
        {
          "name": "Get All Discounts (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/discounts?page=1&limit=10",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Discounts by Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/discounts?status=Active&type=percentage",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ],
              "query": [
                {
                  "key": "status",
                  "value": "Active"
                },
                {
                  "key": "type",
                  "value": "percentage"
                }
              ]
            }
          }
        },
        {
          "name": "Get Discount by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/discounts/{{discountId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "{{discountId}}"
              ]
            }
          }
        },
        {
          "name": "Update Discount",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"value\": 25,\n  \"maxDiscount\": 75,\n  \"description\": \"Updated: 25% off on premium plans (was 20%)\",\n  \"usageLimit\": 150\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts/{{discountId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "{{discountId}}"
              ]
            }
          }
        },
        {
          "name": "Deactivate Discount",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"Inactive\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts/{{discountId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "{{discountId}}"
              ]
            }
          }
        },
        {
          "name": "Delete Discount",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/discounts/{{discountId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "{{discountId}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Discounts - User Operations",
      "item": [
        {
          "name": "Get Active Discounts (User View)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            },
            "description": "Note: Users only see active, currently valid discounts"
          }
        },
        {
          "name": "Validate Discount - Valid Case",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Discount validation successful', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.isValid).to.be.true;",
                  "    pm.expect(response.discount).to.have.property('discountAmount');",
                  "    pm.expect(response.discount).to.have.property('finalAmount');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"SAVE20\",\n  \"planId\": \"{{planId}}\",\n  \"amount\": 299\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts/validate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "validate"
              ]
            }
          }
        },
        {
          "name": "Validate Discount - Below Minimum Amount",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Discount validation fails for low amount', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.isValid).to.be.false;",
                  "    pm.expect(response.message).to.include('Minimum order amount');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"SAVE20\",\n  \"planId\": \"{{planId}}\",\n  \"amount\": 50\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts/validate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "validate"
              ]
            }
          }
        },
        {
          "name": "Validate Discount - Invalid Code",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Invalid discount code rejected', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.isValid).to.be.false;",
                  "    pm.expect(response.message).to.include('Invalid discount code');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"INVALID_CODE\",\n  \"planId\": \"{{planId}}\",\n  \"amount\": 299\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts/validate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "validate"
              ]
            }
          }
        },
        {
          "name": "Validate Discount - Expired Code",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Expired discount code rejected', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.isValid).to.be.false;",
                  "    pm.expect(response.message).to.include('expired');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"EXPIRED10\",\n  \"planId\": \"{{planId}}\",\n  \"amount\": 299\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts/validate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "validate"
              ]
            }
          }
        },
        {
          "name": "Validate Fixed Discount",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"FIXED50\",\n  \"planId\": \"{{planId}}\",\n  \"amount\": 299\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts/validate",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts",
                "validate"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Create Discount - Missing Required Fields",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"INVALID\",\n  \"type\": \"percentage\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            }
          }
        },
        {
          "name": "Create Discount - Invalid Percentage",
