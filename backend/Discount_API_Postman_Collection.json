              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"INVALID_PERCENT\",\n  \"type\": \"percentage\",\n  \"value\": 150,\n  \"validFrom\": \"2025-09-01T00:00:00.000Z\",\n  \"validTo\": \"2025-12-31T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
