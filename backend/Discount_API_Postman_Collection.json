        {
          "name": "Create Discount - Invalid Date Range",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"INVALID_DATES\",\n  \"type\": \"percentage\",\n  \"value\": 10,\n  \"validFrom\": \"2025-12-31T00:00:00.000Z\",\n  \"validTo\": \"2025-09-01T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            }
          }
        },
        {
          "name": "Access Discount without Authentication",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            }
          }
        },
        {
          "name": "User tries to Create Discount (Should Fail)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "description": "Use user token here, not admin token"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"USER_ATTEMPT\",\n  \"type\": \"percentage\",\n  \"value\": 10,\n  \"validFrom\": \"2025-09-01T00:00:00.000Z\",\n  \"validTo\": \"2025-12-31T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/discounts",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "discounts"
              ]
            }
          }
        }
      ]
    }
  ]
}